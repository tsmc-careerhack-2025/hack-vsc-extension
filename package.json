{
  "name": "hack-vsc-extension",
  "displayName": "hack-vsc-extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hack-vsc-extension.hackConvert",
        "title": "Hack: Convert"
      },
      {
        "command": "hack-vsc-extension.hackOptimize",
        "title": "Hack: Optimize"
      },
      {
        "command": "hack-vsc-extension.hackUpgrade",
        "title": "Hack: Upgrade"
      },
      {
        "command": "hack-vsc-extension.hackDeploy",
        "title": "Hack: Deploy"
      },
      {
        "command": "hack-vsc-extension.showSelectedText",
        "title": "Hack: show selected text"
      },
      {
        "command": "hack-vsc-extension.showEditorContent",
        "title": "Hack: show editor text"
      }
    ],
    "viewsContainers": {
        "panel": [
            {
                "id": "hackPanel",
                "title": "Hack",
                "icon": "static/images/tools.svg"
            }
        ]
    },
    "views": {
        "hackPanel": [
            {
                "type": "webview",
                "id": "hack.panel",
                "name": "Hack Panel"
            }
        ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
