{
  "name": "hack-vsc-extension",
  "displayName": "hack-vsc-extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hack-vsc-extension.hackConvert",
        "title": "Hack: Convert"
      },
      {
        "command": "hack-vsc-extension.hackOptimize",
        "title": "Hack: Optimize"
      },
      {
        "command": "hack-vsc-extension.hackUpgrade",
        "title": "Hack: Upgrade"
      },
      {
        "command": "hack-vsc-extension.hackDeploy",
        "title": "Hack: Deploy"
      },
      {
        "command": "hack-vsc-extension.showSelectedText",
        "title": "Hack: show selected text"
      },
      {
        "command": "hack-vsc-extension.showEditorContent",
        "title": "Hack: show editor text"
      },
      {
        "command": "hack-vsc-extension.applySuggestedEdit",
        "title": "✅ 套用建議修改"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "hackConvertPanel",
          "title": "Convert",
          "icon": "static/images/tools.svg"
        }
      ]
    },
    "views": {
      "hackConvertPanel": [
        {
          "type": "webview",
          "id": "hack.convert.panel",
          "name": "Convert Panel"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "hack-vsc-extension.showSelectedText",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "hack-vsc-extension.applySuggestedEdit",
          "when": "showApplyEditButton",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "uuid": "^11.0.5"
  }
}
